<%- include('../../includes/head.ejs')%>
<%- include('../../includes/navigation.ejs')%>

<div class="modal" id="create-requests-modal" tabindex="-1" role="dialog" aria-labelledby="create-requests-modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-themed block-transparent mb-0">
                <div class="block-header bg-primary-dark">
                    <h3 class="block-title">Crear solicitudes</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-dismiss="modal" aria-label="Close">
                            <i class="si si-close"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content">
                    <form action="requests" method="post">
                        <div class="form-group row">
                            <div class="col-md-9">
                                <div class="form-material floating">
                                    <select class="form-control" id="idCliente" name="idCliente">
                                        <option value="" disabled selected>Seleccionar cliente</option>
                                        <% for (client of users) { %>
                                        <option value=" <%=client.idCliente%>"><%=client.Nombre%> <%=client.Apellido%>
                                        </option>
                                        <%} %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9">
                                <div class="form-material floating">
                                    <select class="form-control" id="idPersonal" name="idPersonal">
                                        <option value="" disabled selected>Seleccionar Personal</option>
                                        <% for (customer of customers) { %>
                                        <option value=" <%=customer.idPersonal%>"><%=customer.Nombre%>
                                            <%=customer.Apellido%></option>
                                        <%} %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9">
                                <div class="form-material floating">
                                    <select class="form-control" id="idSucursal" name="idSucursal">
                                        <option value="" disabled selected>Seleccionar sucursal</option>
                                        <% for (location of locations) { %>
                                        <option value=" <%=location.idSucursal%>"><%=location.Calle%> </option>
                                        <%} %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9">
                                <div class="form-material floating">
                                    <select class="form-control" id="Tipo" name="Tipo">
                                        <option value="" disabled selected>Seleccionar tipo de solicitud</option>
                                        <option value="Queja">Queja</option>
                                        <option value="Queja">Sugerencia</option>
                                        <option value="Queja">Reclamaci√≥n</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <!-- AREA SELECT -->
                        <div class="form-group row">
                            <div class="col-md-9">
                                <div class="form-material floating">
                                    <select class="form-control" id="idArea" name="idArea">
                                        <option value="" disabled selected>Seleccionar area</option>
                                        <% for (area of areas) { %>
                                        <option value=" <%=area.idArea%>"><%=area.NombreArea%></option>
                                        <%} %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- DESCRIPCION TEXTAREA -->

                        <div class="form-group row">
                            <div class="col-12">
                                <div class="form-material floating">
                                    <textarea class="form-control" id="Descripcion" name="Descripcion"
                                        rows="8"></textarea>
                                    <label for="Descripcion">Descripcion</label>
                                </div>
                            </div>
                        </div>

                        <!-- DESCRIPCION BUTTON -->
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-alt-primary">Crear</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-alt-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
<!-- END Normal Modal -->

<%- include('../../includes/end.ejs') %>